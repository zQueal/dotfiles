# Functions

clone () {
  if [[ -n $1 ]]; then
    service=$1
  fi
  case $service in
    "gh") git clone gh:$2;;
    "gist") git clone gist:$2;;
    "bb") git clone bb:$2;;
    "sl") git clone sl:$2;;
    "aur") git clone aur:$2;;
    *) echo "clone {gh,gist,bb,sl,aur} repo/name";;
  esac
}

mp3 () {
  for f in *.m4a; do ffmpeg -i "$f" -codec:a libmp3lame -q:a 2 "${f%.m4a}.mp3"; done
}

